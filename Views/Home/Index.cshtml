@model IList<Intern>

@{ ViewData["Title"] = "Information about our classroom"; }

@section styles {
    <!-- Read about this here https://fontawesome.com/icons?d=gallery&p=2 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

@section scripts {
    <script type="text/javascript" src="~/js/addNewcommers.js"></script>
    <script type="text/javascript" src="~/js/editNewcommer.js"></script>
    <script type="text/javascript" src="~/js/removeNewcommer.js"></script>
}

@section modalWindows {
    <!-- Modal -->
    <div class="modal fade" id="editClassmate" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit Classmate</h4>
                </div>
                <div class="modal-body">
                    <p>
                        Name
                        <input id="classmateName" title="Name" type="text">
                    </p>
                </div>
                <div class="modal-footer">
                    <button id="submit" type="button" class="btn" data-dismiss="modal">Submit</button>
                    <button id="cancel" type="button" class="btn" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
}
<h2>Our rules</h2>
<img src="img/Our rules.jpg" alt="Our rules" width="400" />
<h2>Here is our classroom</h2>

<ul id="list">
    @for (var i = 0; i < Model.Count; i++)
    {
        var member = Model[i];

    <li class="member" member-id="@member.Id">
        <div class="memberInfo">
            <span class="name">@member.Name</span><i class="delete fa fa-remove"></i>
            <i class="startEdit fa fa-pencil" data-toggle="modal" data-target="#editClassmate"></i>
        </div>
    </li>
}
</ul>

<input id="newcomer" title="Name" type="text" />
<button id="add" class="btn btn-primary">
    <i class="fa fa-plus-circle"></i>
    Add newcomer
</button>
<button id="clear" class="btn btn-secondary">
    <i class="fa fa-cut"></i>
    Clear
</button>
